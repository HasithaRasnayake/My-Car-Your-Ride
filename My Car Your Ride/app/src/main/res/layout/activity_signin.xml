<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.MyCarYourRide.Signin"
    android:orientation="vertical"
    android:background="@drawable/template">

    <TextView
        android:id="@+id/textView"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:fontFamily="@font/faster_one"
        android:gravity="center"
        android:text="Welcome !!!
                      Nice to see you here!"
        android:textColor="#0F26A5"
        android:textSize="28sp" />
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedcorners"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Username / Email Id"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textColor="#DA9812"
        android:textColorHint="#DA9812"
        android:textColorLink="#DA9812"
        android:layout_weight="0.5"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
       />
    <EditText
        android:id="@+id/editText19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundedcorners"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:ems="10"
        android:gravity="center"
        android:hint="password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="#DA9812"
        android:textColorHint="#DA9812"
        android:textColorLink="#DA9812"
        android:layout_weight="0.5"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#da9812"
        android:text="Forgot password?"
        android:textColor="#070606"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="240dp"
        android:background="@drawable/roundedcorners"
        android:backgroundTint="#fece2f"
        android:text="Sign In"
        android:textColor="#000000"
        android:textColorHint="#C59A8D"
        android:textSize="18sp" />



</LinearLayout>